{% extends 'base.html.twig' %}

{% block title %}Se connecter {{ parent() }} {% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="d-flex justify-content-center align-items-center flex-column ">
            <div class="col-5 mt-5 form-container">
                <h1 class="h3 mb-3 font-weight-normal text-center">Veuillez vous connecter</h1>
                <div class="d-flex align-items-center ">
                    <label for="inputEmail" class="mb-1 me-3">Votre adresse mail :</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-50"
                           autocomplete="email" required autofocus>
                </div>
                <div class="d-flex mt-3 align-items-center">
                    <label for="inputPassword" class="mb-1 me-3">Votre mot de passe :</label>
                    <input type="password" name="password" id="inputPassword" class="form-control w-50"
                           autocomplete="current-password" required>
                </div>


                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="mt-3 ">
                    <i>Vous n'Ãªtes pas encore inscrit ? <a href="{{ path('app_register') }}">Inscrivez-vous</a></i>
                </div>

                <button class="btn btn-primary mt-3 qsa-btn" type="submit">Se connecter</button>
            </div>
        </div>


    </form>
{% endblock %}
